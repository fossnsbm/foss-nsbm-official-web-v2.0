---
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import { SignIn, SignOut } from "auth-astro/components";
import { getSession } from "auth-astro/server";
import { sql } from "../lib/neon";  // Importing sql from the neon client


// Get the session data from the request
const session = await getSession(Astro.request);

// Function to store email in Neon (PostgreSQL) using the neon client
async function storeUserEmail(email: string) {
  try {
    // Insert or update the email and last login time in the users table
    await sql`
      INSERT INTO users (email, last_login)
      VALUES (${email}, NOW())
      ON CONFLICT (email)
      DO UPDATE SET last_login = NOW();
    `;
    // After storing the email, redirect to the dashboard
    return '/dashboard'; // Return the redirect URL
  } catch (error) {
    console.error("Error storing email in Neon:", error);
    return '/error'; // Redirect to an error page in case of failure
  }
}

// If the user is logged in, store the email and redirect
if (session && session.user?.email) {
  const redirectTo = await storeUserEmail(session.user.email);
  if (redirectTo) {
    return Astro.redirect('/lo');  // Use Astro's redirect method
  }
}
