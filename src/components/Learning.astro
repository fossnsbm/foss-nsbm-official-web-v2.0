---
import Container from "./Container.astro";
import CardEvent from "./CardEvent.astro";

---

<div class="pt-32">
  <Container>
    <div class="mb-12 space-y-2 text-center">
      <h2 class="text-5xl font-bold text-gray-800 ">
        Comming Soon
      </h2>
      </div>
      
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 blur-sm">
            <CardEvent 
              image="./images/events/SFD1.webp"
              alt="FOSS Community of NSBM - SFD 2023"
              title="Software Freedom Day Sri Lanka 2023"
              body="The Software Freedom Day (SFD) is an annual worldwide celebration of Free Software."
              url="https://www.facebook.com/foss.nsbm/posts/pfbid02VmHcJ3ZoAPGghZ12v3ziwALkmyP6Z4pjPyCzRKfcnD8LgniG6tp45VYFUuStyhaCl"
              button_text="Read More" 
            />
            <CardEvent 
              image="./images/events/nmc.webp"
              alt="art cover"
              title="Node Meets Cloud | Cloud Session 2023"
              body="Node Meets Cloud is a Azure Cloud Platform event that hosted by Microstoft Students Ambassadors."
              url="https://www.facebook.com/foss.nsbm/posts/pfbid02L6PED9FK47uijLzrUfN5Ceb2LT2DiXjfs9t55GppAw3QXkHVgqXAfVbLqY5yzNTAl"
              button_text="Read More" 
            />
            <CardEvent 
              image="./images/events/technosphere.webp"
              alt="art cover"
              title="Technosphere | Tech Conference 2022"
              body="Technosphere is a tech conference that brings together the best and brightest minds in the tech industry."
              url="https://www.facebook.com/foss.nsbm"
              button_text="Read More" 
            />      
          </div> 
          
  </Container>
</div>