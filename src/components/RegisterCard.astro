---
import Container from './Container.astro';
import { sql } from '../lib/neon';

let responseSent = false;  // Track if a response is already sent

if (Astro.request.method === "POST") {
  try {
    const contentType = Astro.request.headers.get("content-type") || "";
    let data;

    // Handle form data or JSON based on content type
    if (contentType.includes("application/x-www-form-urlencoded") || contentType.includes("multipart/form-data")) {
      data = await Astro.request.formData();
    } else if (contentType.includes("application/json")) {
      data = await Astro.request.json();
    }

    // Retrieve form data
    const firstname = data.get("firstname");
    const lastname = data.get("lastname");
    const email = data.get("email");
    const phone = data.get("phone");
    const batch = data.get("batch");
    const department = data.get("department");

    // Check for required fields
    if (!firstname || !lastname || !email || !phone || !batch || !department) {
      if (!responseSent) {
        responseSent = true;
        return new Response('Missing required fields.', { status: 400 });
      }
    }

    console.log("Name:", `${firstname} ${lastname}`);
    console.log("Email:", email);
    console.log("Phone:", phone);
    console.log("Batch:", batch);
    console.log("Department:", department);

    // Insert data into the database
    await sql`
      INSERT INTO users (firstname, lastname, email, phone, batch, department) 
      VALUES (${firstname}, ${lastname}, ${email}, ${phone}, ${batch}, ${department})
    `;

   
  } catch (error) {
    console.error("Error storing data:", error);
    if (!responseSent) {
      responseSent = true;
      return new Response('Error storing data.', { status: 500 });
    }
  }
}
---

<Container>
  <div class="min-h-screen bg-white flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h2 class="mt-6 text-center text-4xl font-bold text-gray-900">
        FOSS Community of NSBM.
      </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow-2xl sm:rounded-lg sm:px-10">
        <form class="space-y-6" action="/register" method="POST" enctype="application/x-www-form-urlencoded">
          <div>
            <label for="email" class="block text-lg font-medium text-gray-700">
              Email
            </label>
            <div class="mt-1">  
              <input 
                id="email" 
                name="email" 
                type="email" 
                autocomplete="email" 
                required
                class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                placeholder="Enter your email address"
              />
            </div>
          </div>

          <div>
            <label for="firstname" class="block text-lg font-medium text-gray-700">
              First Name
            </label>
            <div class="mt-1">
              <input 
                id="firstname" 
                name="firstname" 
                type="text" 
                required
                class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                placeholder="Enter your First Name"
              />
            </div>
          </div>

          <div>
            <label for="lastname" class="block text-lg font-medium text-gray-700">
              Last Name
            </label>
            <div class="mt-1">
              <input 
                id="lastname" 
                name="lastname" 
                type="text" 
                required
                class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                placeholder="Enter your Last Name"
              />
            </div>
          </div>

          <div>
            <label for="batch" class="block text-lg font-medium text-gray-700">
              Batch
            </label>
            <div class="flex flex-wrap">
              <div class="flex items-center me-4">
                <input 
                  id="batch-23.1" 
                  type="radio" 
                  value="23.1" 
                  name="batch" 
                  class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
                />
                <label for="batch-23.1" class="ms-2 text-sm font-medium text-gray-900">23.1</label>
              </div>
              <!-- Add other batch radio inputs here as needed -->
            </div>
          </div>

          <div>
            <label for="phone" class="block text-lg font-medium text-gray-700">
              Phone Number
            </label>
            <div class="mt-1">
              <input 
                id="phone" 
                name="phone" 
                type="tel" 
                required
                oninput="this.value = this.value.replace(/[^0-9]/g, '');"
                class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                pattern="[0-9]*" 
                inputmode="numeric"
                placeholder="Enter your Phone number"
              />
            </div>
          </div>

          <div>
            <label for="department" class="block text-lg font-medium text-gray-700">
              Department
            </label>
            <div class="mt-1">
              <select 
                id="department" 
                name="department" 
                required
                class="appearance-none rounded-md block w-full px-3 py-2 border border-gray-300 bg-white text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
              >
                <option value="">Select your department</option>
                <option value="CS">Computer Science</option>
                <option value="IT">Information Technology</option>
                <option value="SE">Software Engineering</option>
                <option value="DS">Data Science</option>
              </select>
            </div>
          </div>

          <div>
            <button 
              type="submit"
              class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-[#65BBD0] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Container>
